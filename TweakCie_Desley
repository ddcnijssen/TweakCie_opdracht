<html>
  <body>
    <?php
      for ($number = 1; $number <= 18; $number++) {
        if ($number %3 == 0 && $number %5 != 0)
            echo "Blauwe" . "<br>";
        if ($number %5 == 0 && $number %3 != 0)
            echo "Schuit" . "<br>";
        if ($number %5 == 0 && $number %3 == 0)
            echo "BlauweSchuit" . "<br>";
        else 
            echo "$number" . "<br>";
      }
    ?>
  </body>
</html>
