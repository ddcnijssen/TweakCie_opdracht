<html>
  <body>
    <?php
      for ($number = 1; $number <= 18; $number++) {
        if ($number %3 == 0 && $number %5 != 0)
            echo "<p>Blauwe</p>";
        if ($number %5 == 0 && $number %3 != 0)
            echo "<p>Schuit</p>";
        if ($number %5 == 0 && $number %3 == 0)
            echo "<p>BlauweSchuit</p>";
        else 
            echo "<p>$number</p>";
      }
    ?>
  </body>
</html>
